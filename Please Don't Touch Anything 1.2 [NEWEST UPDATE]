def onMousePress(mouseX, mouseY):
    global BLSB
    global ISL
    if (BLSB > 0):
        if (BLT.contains(mouseX,mouseY) == True):
            BL.opacity = 45
        else:
            BL.opacity = 0
    #Varables
    global LDR
    global ODRL
    global KPD1
    global APLOK
    global MON
    global CBLOK
    global CSLOK1 
    global CLV
    global CRV
    global N
    global L
    global LL
    global LLL
    global Clicks
    global DPLOK
    global DPIA 
    global DPUV 
    global CCONTIN
    global SRSL
    global KPD1
    global ODRL
    #DIALOG
    if (MINISTICKY.contains(mouseX, mouseY) == True):
        STICKYNOTE.visible = True
        STICKYNOTE.toFront()
        SRSL = 0
        CBLOK = 0
    else:
        SRSL = 1
        CBLOK = 1
    #Button 
    if(CBLOK > 0):
        if (C.contains(mouseX, mouseY) == True):
            Clicks+=1
            C.fill = 'DarkRed'
    #Centeral Select Buttons
    if(CSLOK1 > 0):
         if(CSL.contains(mouseX, mouseY) == True):
            CLV+=1
            CSL.fill = 'grey'
            print('LEFT SELECTED')
         if(CSR.contains(mouseX, mouseY) == True):
            CRV+=1
            CSR.fill = 'grey'
            print('RIGHT SELECTED')
    #I II III Buttons
    if(ISL > 0):
        if (Z.contains(mouseX, mouseY) == True):
            Z.fill = 'grey'
            N-=.5
            print('Zero')
        if (O.contains(mouseX, mouseY) == True):
            O.fill = 'grey'
            L+=6
            print('One')
        if (I.contains(mouseX, mouseY) == True):
            I.fill = 'grey'
            LL-=9
            print('Two')
        if (T.contains(mouseX, mouseY) == True):
            T.fill = 'grey'
            LLL+=.1
            print('Three')
    #DPAD
    if(DPLOK > 0):
        if (DPADA.contains(mouseX, mouseY) == True):
             print('âLAUNCHING M.O.O.Nâ')
             DPIA =+1
    #events
        #Black Light
    if(Clicks == 5):
        BLT.visible = True
        BLSB =+1
        # O I II III
    if(Clicks == 10):
        ISL =+ 1
        LBL.visible = True
        Z.visible = True
        O.visible = True
        I.visible = True
        T.visible = True
    #CRASH
    if(N+L+LL+LLL== -0.8):
        Crash.visible = True
        O.visible = False
        I.visible = False
        T.visible = False
        Z.visible = False
        CBLOK -= 1
        LBL.visible = False
        ISL -= 2
        CRASHEND.visible = True
        counter.value = -9223372036854775807
    if(N+L+LL+LLL== -2.8):
        O.visible = False
        I.visible = False
        T.visible = False
        Z.visible = False
        LBL.visible = False
        ISL -= 2
        CSLOK1 +=1
        CSR.visible = True
        CSL.visible = True
        LLB.visible = True
        LLB.toFront()
        RLB.toFront()
        RLB.visible = True
    #Central Switch Stuff
    if(CRV == 1):
        CSLOK1 -=2
        LLB.visible = False
        RLB.visible = False
        CSR.visible = False
        CSL.visible = False
        DPADA.visible = True
        MLST.visible = True
        DPLOK +=1
    if(CLV == 1):
        CSLOK1 -=2
        LLB.visible = False
        RLB.visible = False
        CSR.visible = False
        CSL.visible = False
